/*
AlgoNova Home Page - Movable Top Tabs (single-file React component)

What this file includes:
- Default-exported React component `AlgoNovaHome` (ready to drop into a React app)
- Tailwind-based styling (no Tailwind imports here; app must include Tailwind setup)
- Framer Motion usage for smooth animations
- Plain-HTML5 drag-and-drop reordering for top tabs (desktop & mobile friendly)
- Auto/light/dark mode switch (auto by system, with toggle & localStorage)

Quick package.json + vercel.json + tailwind.config.js snippets (paste into your project root):

// package.json (snippet)
/*
{
  "name": "algonova-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview"
  },
  "dependencies": {
    "react": "18.x",
    "react-dom": "18.x",
    "framer-motion": "8.x"
  },
  "devDependencies": {
    "vite": "5.x",
    "tailwindcss": "4.x",
    "postcss": "8.x",
    "autoprefixer": "10.x"
  }
}
*/

// vercel.json (optional) to ensure proper build output for Vite
/*
{
  "build": {
    "env": {}
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
*/

// tailwind.config.js (snippet)
/*
module.exports = {
  content: ["./index.html", "./src/**/*.{js,jsx,ts,tsx}"],
  darkMode: 'class',
  theme: { extend: {} },
  plugins: []
}
*/

*/

import React, { useEffect, useRef, useState } from 'react'
import { motion, AnimatePresence } from 'framer-motion'

// -- Helper: default tabs
const DEFAULT_TABS = [
  { id: 'dashboard', label: 'Dashboard' },
  { id: 'algorithms', label: 'Algorithms' },
  { id: 'categories', label: 'Categories' },
  { id: 'marketplace', label: 'Marketplace' },
  { id: 'community', label: 'Community' },
  { id: 'settings', label: 'Settings' }
]

export default function AlgoNovaHome() {
  // Tabs state (orderable)
  const [tabs, setTabs] = useState(DEFAULT_TABS)
  const [active, setActive] = useState(tabs[0].id)

  // Drag & drop indices
  const dragIndexRef = useRef(null)
  const dragOverIndexRef = useRef(null)

  // Theme: 'system' | 'light' | 'dark'
  const [themeMode, setThemeMode] = useState(() => {
    // load from localStorage, default to 'system'
    if (typeof window === 'undefined') return 'system'
    return localStorage.getItem('algonova_theme') || 'system'
  })

  useEffect(() => {
    applyTheme(themeMode)
    localStorage.setItem('algonova_theme', themeMode)
  }, [themeMode])

  function applyTheme(mode) {
    const root = document.documentElement
    if (mode === 'system') {
      // follow prefers-color-scheme
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches
      root.classList.toggle('dark', prefersDark)
    } else if (mode === 'dark') {
      root.classList.add('dark')
    } else {
      root.classList.remove('dark')
    }
  }

  // Drag handlers
  function handleDragStart(e, index) {
    dragIndexRef.current = index
    e.dataTransfer.effectAllowed = 'move'
    // for Firefox
    e.dataTransfer.setData('text/plain', '')
  }

  function handleDragOver(e, index) {
    e.preventDefault()
    dragOverIndexRef.current = index
  }

  function handleDrop(e) {
    e.preventDefault()
    const from = dragIndexRef.current
    const to = dragOverIndexRef.current
    if (from == null || to == null) return
    if (from === to) return

    setTabs(prev => {
      const next = [...prev]
      const [moved] = next.splice(from, 1)
      next.splice(to, 0, moved)
      return next
    })

    // reset refs
    dragIndexRef.current = null
    dragOverIndexRef.current = null
  }

  // simple content renderer for each tab
  function TabContent({ id }) {
    switch (id) {
      case 'dashboard':
        return (
          <section className="space-y-4">
            <Card title="Overview">
              <p className="text-sm text-muted-foreground">At-a-glance metrics and recent activity.</p>
            </Card>
            <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
              <StatCard title="Active Models" value="12" />
              <StatCard title="Runs Today" value="349" />
              <StatCard title="Incidents" value="2" />
            </div>
          </section>
        )
      case 'algorithms':
        return (
          <section>
            <Card title="Algorithms">
              <p className="text-sm text-muted-foreground">Browse, filter and run algorithms.</p>
              <div className="mt-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
                {Array.from({ length: 6 }).map((_, i) => (
                  <AlgorithmCard key={i} name={`Algo ${i + 1}`} description={`Short description for Algo ${i + 1}`} />
                ))}
              </div>
            </Card>
          </section>
        )
      case 'categories':
        return (
          <section>
            <Card title="Categories">
              <div className="flex flex-wrap gap-3">
                {['Clustering', 'Regression', 'Optimization', 'Vision', 'NLP'].map((c) => (
                  <span key={c} className="px-3 py-1 rounded-full bg-gray-100 dark:bg-gray-800 text-sm">{c}</span>
                ))}
              </div>
            </Card>
          </section>
        )
      case 'marketplace':
        return (
          <section>
            <Card title="Marketplace">
              <p>Buy / sell models, datasets and connectors.</p>
            </Card>
          </section>
        )
      case 'community':
        return (
          <section>
            <Card title="Community">
              <p>Discussions, posts and announcements.</p>
            </Card>
          </section>
        )
      case 'settings':
        return (
          <section>
            <Card title="Settings & Profile">
              <div className="flex flex-col gap-3">
                <div className="flex items-center justify-between">
                  <div>
                    <p className="font-medium">Theme</p>
                    <p className="text-sm text-muted-foreground">Auto switches based on system, or choose manually.</p>
                  </div>
                  <div className="flex gap-2 items-center">
                    <select value={themeMode} onChange={(e) => setThemeMode(e.target.value)} className="rounded-md p-2 bg-white dark:bg-gray-900 border">
                      <option value="system">Auto (system)</option>
                      <option value="light">Light</option>
                      <option value="dark">Dark</option>
                    </select>
                  </div>
                </div>
                <div>
                  <p className="font-medium">Profile</p>
                  <div className="mt-2 flex items-center gap-3">
                    <div className="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-pink-500 flex items-center justify-center text-white">HS</div>
                    <div>
                      <div className="font-medium">Hira Saleem</div>
                      <div className="text-sm text-muted-foreground">hira@algonova.io</div>
                    </div>
                  </div>
                </div>
              </div>
            </Card>
          </section>
        )
      default:
        return <div />
    }
  }

  return (
    <div className="min-h-screen bg-white dark:bg-gray-950 text-gray-900 dark:text-gray-100 transition-colors">
      <div className="max-w-7xl mx-auto p-4">
        <header className="flex items-center justify-between">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-600 to-cyan-400 flex items-center justify-center text-white font-bold">AN</div>
            <div>
              <div className="text-lg font-semibold">AlgoNova</div>
              <div className="text-xs text-muted-foreground">Your algorithms, faster</div>
            </div>
          </div>

          <div className="flex items-center gap-3">
            <button
              onClick={() => setThemeMode(themeMode === 'dark' ? 'light' : 'dark')}
              className="px-3 py-1 rounded-md border bg-white dark:bg-gray-800"
            >
              Toggle
            </button>
            <div className="hidden sm:block">
              <div className="text-sm">Signed in as <span className="font-medium">Hira</span></div>
            </div>
          </div>
        </header>

        {/* Top draggable tabs */}
        <nav className="mt-6">
          <div className="relative">
            <div
              className="flex gap-2 overflow-x-auto no-scrollbar px-1 py-2"
              onDragOver={(e) => e.preventDefault()}
              onDrop={handleDrop}
            >
              {tabs.map((t, idx) => (
                <motion.div
                  key={t.id}
                  layout
                  initial={{ opacity: 0.8 }}
                  animate={{ opacity: 1 }}
                  whileHover={{ scale: 1.03 }}
                  className={`flex-shrink-0 select-none rounded-t-lg px-4 py-2 cursor-grab border ${active === t.id ? 'bg-white dark:bg-gray-800 border-b-0' : 'bg-gray-50 dark:bg-gray-900/40'} `}
                  draggable
                  onDragStart={(e) => handleDragStart(e, idx)}
                  onDragOver={(e) => handleDragOver(e, idx)}
                  onClick={() => setActive(t.id)}
                >
                  <div className="flex items-center gap-2">
                    <div className="text-sm font-medium">{t.label}</div>
                    <div className="text-xs text-muted-foreground">⋮</div>
                  </div>
                </motion.div>
              ))}
            </div>

            {/* Indicator */}
            <div className="border-t border-gray-200 dark:border-gray-800 mt-[-1px]"></div>
          </div>
        </nav>

        {/* Main content area */}
        <main className="mt-6">
          <AnimatePresence mode="wait">
            <motion.div
              key={active}
              initial={{ opacity: 0, y: 8 }}
              animate={{ opacity: 1, y: 0 }}
              exit={{ opacity: 0, y: -6 }}
              transition={{ duration: 0.22 }}
              className="pb-8"
            >
              <TabContent id={active} />
            </motion.div>
          </AnimatePresence>
        </main>

        <footer className="mt-8 text-xs text-muted-foreground">© {new Date().getFullYear()} AlgoNova</footer>
      </div>
    </div>
  )
}

// ----------------- Small UI helper components -----------------

function Card({ title, children }) {
  return (
    <div className="rounded-2xl bg-white dark:bg-gray-900 p-4 shadow-sm border">
      {title && <div className="font-semibold mb-2">{title}</div>}
      <div>{children}</div>
    </div>
  )
}

function StatCard({ title, value }) {
  return (
    <div className="rounded-xl p-4 bg-white dark:bg-gray-900 border shadow-sm">
      <div className="text-sm text-muted-foreground">{title}</div>
      <div className="text-2xl font-bold mt-2">{value}</div>
    </div>
  )
}

function AlgorithmCard({ name, description }) {
  return (
    <div className="p-3 rounded-xl border bg-white dark:bg-gray-900 hover:shadow transition">
      <div className="font-medium">{name}</div>
      <div className="text-sm text-muted-foreground">{description}</div>
      <div className="mt-3 flex items-center gap-2">
        <button className="px-3 py-1 rounded-md border">Run</button>
        <button className="px-3 py-1 rounded-md border">Details</button>
      </div>
    </div>
  )
}
